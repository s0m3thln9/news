generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  uuid         String    @id @default(uuid())
  email        String    @unique
  firstName    String
  lastName     String
  password     String
  role         UserRole  @default(USER)
  language     Language?
  createdAt    DateTime  @default(now()) @db.Timestamp(3)
  updatedAt    DateTime  @updatedAt @db.Timestamp(3)
  Location     Location? @relation(fields: [locationUuid], references: [uuid], onDelete: Cascade)
  locationUuid String?   @db.Char(36)
  news         News[]
}

enum UserRole {
  USER // обычный пользователь: просмотр новостей, редактирование своих данных
  EDITOR // редактор: постит в своей категории
  ADMIN // админ: назначает роли, создаёт категории, полный доступ
}

enum Language {
  RU
  EN
}

model Location {
  uuid      String   @id @default(uuid()) @db.Char(36)
  title     String
  image     String?
  editors   User[]
  createdAt DateTime @default(now()) @db.Timestamp(3)
  updatedAt DateTime @updatedAt @db.Timestamp(3)
  news      News[]
}

model News {
  uuid         String    @id @default(uuid()) @db.Char(36)
  author       User      @relation(fields: [userUuid], references: [uuid], onDelete: Cascade)
  image        String
  title        String
  description  String
  content      String
  pinnedAt     DateTime?
  location     Location  @relation(fields: [locationUuid], references: [uuid], onDelete: Cascade)
  createdAt    DateTime  @default(now()) @db.Timestamp(3)
  updatedAt    DateTime  @updatedAt @db.Timestamp(3)
  userUuid     String    @db.Char(36)
  locationUuid String    @db.Char(36)
}
